{
  "name": "human-os",
  "version": "0.1.0",
  "private": true,
  "description": "Context & Knowledge Graph Service - Central infrastructure for identity, context, and AI integration",
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "test": "turbo test",
    "clean": "turbo clean && rm -rf node_modules",
    "typecheck": "turbo typecheck",
    "db:migrate": "supabase db push",
    "db:reset": "supabase db reset",
    "db:types": "supabase gen types typescript --local > packages/core/src/database.types.ts"
  },
  "devDependencies": {
    "tsx": "^4.19.0",
    "turbo": "^2.3.0",
    "typescript": "^5.7.2"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "@prisma/client": "^7.1.0",
    "@supabase/supabase-js": "^2.87.1",
    "dotenv": "^17.2.3",
    "prisma": "^7.1.0"
  }
}
