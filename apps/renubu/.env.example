# Renubu Environment Variables Template
# Copy this file to .env.local and fill in your values

# ==============================================================================
# Supabase Configuration
# ==============================================================================

# Get these from: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database URLs (for migrations)
STAGING_DATABASE_URL=postgresql://postgres:password@host:5432/postgres
PROD_DATABASE_URL=postgresql://postgres:password@host:5432/postgres

# ==============================================================================
# Application Configuration
# ==============================================================================

NEXT_PUBLIC_APP_URL=http://localhost:3000

# Demo Mode (enables mock data for development)
NEXT_PUBLIC_DEMO_MODE=true

# Auth Bypass (for development only)
NEXT_PUBLIC_AUTH_BYPASS_ENABLED=false

# GoodHang URL (for CORS on public assessment endpoints)
GOODHANG_URL=http://localhost:3200

# ==============================================================================
# OAuth Integration Credentials
# ==============================================================================

# OAuth Token Encryption Key
# Generate with: openssl rand -base64 32
OAUTH_ENCRYPTION_KEY=your-encryption-key-here

# ------------------------------------------------------------------------------
# Google OAuth (for Calendar & Gmail)
# ------------------------------------------------------------------------------
# Setup: https://console.cloud.google.com/apis/credentials
# 1. Create OAuth 2.0 Client ID
# 2. Add authorized redirect URI: http://localhost:3000/api/auth/oauth/google/callback
# 3. Enable Google Calendar API and Gmail API
# 4. Configure OAuth consent screen

OAUTH_GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
OAUTH_GOOGLE_CLIENT_SECRET=your-google-client-secret

# Optional: Integration-specific credentials (if different from above)
# OAUTH_GOOGLE_CALENDAR_CLIENT_ID=
# OAUTH_GOOGLE_CALENDAR_CLIENT_SECRET=
# OAUTH_GMAIL_CLIENT_ID=
# OAUTH_GMAIL_CLIENT_SECRET=

# ------------------------------------------------------------------------------
# Slack OAuth
# ------------------------------------------------------------------------------
# Setup: https://api.slack.com/apps
# 1. Create new Slack App
# 2. Add redirect URL: http://localhost:3000/api/auth/oauth/slack/callback
# 3. Add OAuth scopes: chat:write, channels:read, users:read
# 4. Install app to workspace

OAUTH_SLACK_CLIENT_ID=your-slack-client-id.apps.svc.cluster.local
OAUTH_SLACK_CLIENT_SECRET=your-slack-client-secret

# ==============================================================================
# AI Services
# ==============================================================================

# Anthropic API (for Claude)
ANTHROPIC_API_KEY=sk-ant-api03-your-key-here

# ==============================================================================
# Human-OS Integration (Release 0.2.0)
# ==============================================================================

# Master toggle for Human-OS integration (default: false)
MCP_ENABLE_HUMAN_OS=false

# Human-OS Supabase connection
# Get these from your Human-OS Supabase project
HUMAN_OS_SUPABASE_URL=https://your-human-os-project.supabase.co
HUMAN_OS_SUPABASE_SERVICE_KEY=your-human-os-service-key-here

# Default tenant layer for relationship context
RENUBU_TENANT_LAYER=renubu:tenant-default

# Optional: Default owner for opinions
DEFAULT_OWNER_ID=uuid-for-opinion-ownership

# Webhook secret for Human-OS events (for external triggers)
HUMAN_OS_WEBHOOK_SECRET=your-webhook-secret

# Human-OS Feature Flags (all default: false)
FEATURE_STRING_TIE_ENRICHMENT=false
FEATURE_PARKING_LOT_HUMAN_OS=false
FEATURE_EXTERNAL_WAKE_TRIGGERS=false

# ==============================================================================
# Optional: Feature Flags
# ==============================================================================

# Enable specific features (true/false)
FEATURE_OAUTH_INTEGRATIONS=true
FEATURE_EMAIL_ORCHESTRATION=true

# Release 0.1.8.1 - Code Optimizations (default: false for safety)
NEXT_PUBLIC_USE_BASE_TRIGGER_EVALUATOR=false
NEXT_PUBLIC_USE_MODULAR_TASK_MODE=false
NEXT_PUBLIC_USE_MODULAR_WORKFLOW_CONFIGS=false

# ==============================================================================
# Development Tools
# ==============================================================================

# Logging level (debug, info, warn, error)
LOG_LEVEL=info

# Enable verbose API logging
DEBUG_API_CALLS=false
